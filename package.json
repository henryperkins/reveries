{
  "name": "reveries-research-assistant",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "build:check": "npm run type-check && npm run build",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "db:test": "tsx src/utils/testDatabaseConnection.ts",
    "db:init": "tsx src/utils/initializeDatabase.ts",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@google/genai": "^1.9.0",
    "@google/generative-ai": "0.23.0",
    "@heroicons/react": "^2.2.0",
    "eslint": "^9.31.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0",
    "xai-sdk": "^1.0.0-alpha.0",
    "@azure/openai": "^1.0.0",
    "langchain": "^0.1.0",
    "langchain-postgres": "^0.0.1",
    "pg-vector": "^0.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "npm:esbuild-wasm@0.25.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "@types/langchain": "^0.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "description": "This contains everything you need to run your app locally.",
  "main": "eslint.config.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
