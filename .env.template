# Azure OpenAI Configuration
VITE_AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
VITE_AZURE_OPENAI_API_KEY=your-api-key-here
VITE_AZURE_OPENAI_DEPLOYMENT=o3-mini
VITE_AZURE_OPENAI_API_VERSION=preview

# Gemini Configuration
VITE_GEMINI_API_KEY=your-gemini-key

# Grok/XAI Configuration
VITE_XAI_API_KEY=your-grok-key

# Application Settings
VITE_DEFAULT_MODEL=gemini-2.5-flash
VITE_ENABLE_FALLBACK=true
VITE_MAX_RETRIES=3
VITE_REQUEST_TIMEOUT=30000

# Azure OpenAI rate-limit overrides (optional)
AZURE_OAI_MAX_TPM=20000
AZURE_OAI_MAX_RPM=300
AZURE_OAI_BURST_TOKENS=6000
